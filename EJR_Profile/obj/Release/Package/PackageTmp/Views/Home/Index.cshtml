<!-- Wrapper -->
<div class="wrapper">
    <!-- Jumbotron -->
    <div class="main-slideshow">
        <div id="main-slideshow" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <!-- Slide No 1 -->
                <div class="item active">
                    <div class="jumbotron first">
                        <div class="container">
                            <div class="row">
                                <div class="col-sm-6">
                                    <h1 class="animated slideInLeft">Hi!<br />I'm Eric J. Ruff</h1>
                                    <p class="lead animated slideInLeft delay-1">I've been around the block and know how to get things done, how to make things exciting.</p>
                                    @Html.ActionLink("Learn more about me", "AboutMe", "Home", new { @class = "btn btn-color animated slideInLeft delay-2" })
                                </div>
                                <div class="col-sm-6 hidden-xs hidden">
                                    <img class="img-responsive" src="~/img/imac.png" alt="...">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Slide No 2 -->
                <div class="item">
                    <div class="jumbotron second">
                        <div class="container">
                            <div class="row">
                                <div class="col-sm-6">
                                    <h1 class="text-center animated fadeInDown"><br />Check out My Portfolio</h1>
                                    <p class="lead text-center animated fadeInDown delay-1">I love to architect, to build things.</p>
                                    <p class="lead text-center animated fadeInDown delay-1">
                                        @Html.ActionLink("My Portfolio", "Portfolio", "Home", new { @class = "btn btn-color text-center lead animated slideInLeft delay-2" })
                                    </p>
                                </div>
                                <div class="col-sm-6">
                                    <div class="video hidden-xs">
                                        <div class="flex-video">
                                            <iframe src="//player.vimeo.com/video/134430492" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Slide No 3 -->
                <div class="item">
                    <div class="jumbotron third">
                        <div class="container">
                            <div class="row">
                                <div class="col-sm-6">
                                    <h1 class="animated slideInLeft">Are You the Right Company?<br />I'm Looking for a Job</h1>
                                    <p class="lead animated slideInLeft delay-1">Check out my video<br />and peruse this site.</p>
                                    @Html.ActionLink("Contact me", "ContactMe", "Home", new { @class = "btn btn-color animated slideInLeft delay-2" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div> <!-- / Slide No 3 -->
            </div>
            <!-- Controls -->
            <a class="slideshow-arrow slideshow-arrow-prev bg-hover-color" href="#main-slideshow" data-slide="prev">
                <i class="fa fa-angle-left"></i>
            </a>
            <a class="slideshow-arrow slideshow-arrow-next bg-hover-color" href="#main-slideshow" data-slide="next">
                <i class="fa fa-angle-right"></i>
            </a>
        </div>
